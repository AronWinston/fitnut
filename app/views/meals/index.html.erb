<%= link_to "New Meal", new_meal_path(@meal), style:"margin:30px" %>


<%@meals.each do |meal|%>

<ul>
<% if meal.image.attached? %>
<h2><%=meal.meal_name%></h2>
<li><%=meal.meal_type%></li>
<div style="width:400px; height:auto">
<%=image_tag(meal.image, style: 'width:100%')%>
</div>

<li><%=meal.calories_consumed%> calories</li>
<li><%=meal.created_at%></li>
<br />
<%= link_to "Edit Meal", edit_meal_path(meal) %>

<%else%>
<h2><%=meal.meal_name%></h2>
<li><%=meal.meal_type%></li>
<li><%=meal.calories_consumed%> calories</li>
<li><%=meal.created_at%></li>
<br />
<%= link_to "Edit Meal", edit_meal_path(meal) %>
<%end%>
</ul>


<%end%>